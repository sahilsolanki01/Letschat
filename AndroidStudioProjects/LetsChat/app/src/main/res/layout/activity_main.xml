<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/gradient_one"
    android:onClick="keyboardDown"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="122dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:paddingStart="16dp"
        android:background="@drawable/roundedittext"
        android:drawableEnd="@drawable/ic_person_black_24dp"
        android:textColor="@android:color/black"
        android:textColorHint="#9e9e9e"
        android:minHeight="45dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/atr"
        android:hint="@string/text_username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextPaasword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/roundedittext"
        android:drawableEnd="@drawable/ic_visibility_off_black_24dp"
        android:ems="10"
        android:fontFamily="@font/atr"
        android:hint="@string/text_password"
        android:inputType="textPassword"
        android:minHeight="45dp"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="#9e9e9e" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPaasword"
        android:layout_alignStart="@+id/editTextPaasword"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="25dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/roundbutton_green"
        android:fontFamily="@font/atr"
        android:onClick="signUpClick"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="SIGN UP"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPaasword"
        android:layout_alignEnd="@+id/editTextPaasword"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/atr"
        android:onClick="toggle"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="LOGIN"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"
         />


</RelativeLayout>
